{
  "manifest_version": 3,
  "name": "Paragraph Summarizer",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "logo192.png"
  },
  "permissions": ["activeTab", "storage", "identity"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}